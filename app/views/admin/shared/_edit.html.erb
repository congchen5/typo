<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>


<% if current_user.admin? %>
  <div class =''>
    <h4><%= _("Merge Articles") %></h4>
    <%= form_tag("/admin/content/merge_article/#{@article.id}", 
	:id => "merge_with") do %>
      Article ID: <%= text_field_tag :merge_id %>
      <%= hidden_field_tag :id, {:value => @article.id} %>
      <br>
    <%= submit_tag "Merge"%>
  <% end %>
<% end %>
</div>
